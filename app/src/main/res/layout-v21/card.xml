<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center_horizontal"
    android:layout_height="155dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:elevation="15dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="9dp"
        android:stateListAnimator="@anim/lift_on_touch"
        android:elevation="15dp"
        android:background="#f0f0f0"
        card_view:cardCornerRadius="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:elevation="15dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:id="@+id/card_view"
                android:clickable="true"
                android:background="#f0f0f0"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="visible"
                    android:background="@drawable/prodimage6"
                    android:layout_marginLeft="5dp"
                    android:adjustViewBounds="true"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:orientation="vertical">


                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:id="@+id/wish"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="right"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="2dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="5dp"
                            android:background="@null"
                            android:scaleType="centerInside"
                            android:src="@drawable/book2"
                            android:visibility="visible"
                            card_view:layout_constraintBottom_toBottomOf="parent"
                            card_view:layout_constraintEnd_toEndOf="parent"
                            card_view:layout_constraintHorizontal_bias="1.0"
                            card_view:layout_constraintStart_toStartOf="parent"
                            card_view:layout_constraintTop_toTopOf="parent"
                            card_view:layout_constraintVertical_bias="0.0" />

                        <ImageButton
                            android:id="@+id/wishr"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="right"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="2dp"
                            android:layout_marginLeft="8dp"
                            android:visibility="gone"
                            android:layout_marginRight="2dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="5dp"
                            android:background="@null"
                            android:scaleType="centerInside"
                            android:src="@drawable/bookr2"
                            android:tint="#23C5A0"
                            card_view:layout_constraintBottom_toBottomOf="parent"
                            card_view:layout_constraintEnd_toEndOf="parent"
                            card_view:layout_constraintHorizontal_bias="1.0"
                            card_view:layout_constraintStart_toStartOf="parent"
                            card_view:layout_constraintTop_toTopOf="parent"
                            card_view:layout_constraintVertical_bias="0.0" />

                        <TextView
                            android:id="@+id/addetails"
                            android:layout_width="176dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="25dp"
                            android:maxLines="2"
                            android:elevation="15dp"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            card_view:layout_constraintBottom_toBottomOf="parent"
                            card_view:layout_constraintEnd_toEndOf="@+id/fbook"
                            card_view:layout_constraintHorizontal_bias="0.0"
                            card_view:layout_constraintStart_toStartOf="parent"
                            card_view:layout_constraintTop_toTopOf="parent"
                            card_view:layout_constraintVertical_bias="0.63" />

                    </android.support.constraint.ConstraintLayout>

                    <TextView
                        android:id="@+id/year"
                        android:layout_width="wrap_content"
                        android:text=""
                        android:layout_height="wrap_content"
                        android:elevation="13dp"
                        android:layout_marginLeft="8dp"
                        android:textColor="#696969"
                        android:textSize="14dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:orientation="horizontal">


                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold"
                        android:elevation="15dp"
                        android:layout_marginTop="15dp"
                        android:textColor="#23C5A0"
                        android:layout_marginLeft="8dp"
                        android:textSize="17dp"
                        />

                        <TextView
                            android:id="@+id/sold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SOLD"
                            android:textStyle="bold"
                            android:elevation="15dp"
                            android:visibility="gone"
                            android:layout_marginTop="15dp"
                            android:textColor="#FF0000"
                            android:layout_marginLeft="8dp"
                            android:textSize="19dp"
                            />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>