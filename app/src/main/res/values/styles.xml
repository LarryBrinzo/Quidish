<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorAccent">@color/activated</item>
        <item name="actionModeStyle">@style/MyActionMode</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="actionModeBackground">@color/white</item>
        <item name="android:actionButtonStyle">@style/myActionButtonStyle</item>
        <item name="actionButtonStyle">@style/myActionButtonStyle</item>
        <item name="actionModeCloseDrawable">@drawable/backa</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="ImageDisplayTheme" parent="Theme.AppCompat">
        <item name="android:windowBackground">@color/black</item>
        <item name="colorPrimary">@color/black</item>
    </style>

    <style name="RotCropTheme" parent="Theme.AppCompat">
        <item name="android:windowBackground">@color/black</item>
        <item name="colorPrimary">@color/black</item>
    </style>

    <style name="TextAppearance44">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.GreenAccent">
        <item name="colorAccent">@color/greenAccent</item>
        <item name="android:thickness">12dp</item>
    </style>

    <style name="MenuItems" parent="AppTheme">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="transparent_dialog_borderless" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">#FF333333</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <item name="android:textSize">17sp</item>
    </style>

    <style name="myActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minHeight">24dp</item>
        <item name="android:maxHeight">26dp</item>
        <item name="android:height">24dp</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="android:background">#fff</item>
        <item name="colorAccent">@color/colorAccent2</item>
        <item name="android:textColorPrimary">#000</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
    <item name="android:textColorPrimary">#000</item>
        <item name="colorAccent">@color/colorAccent2</item>
    <item name="android:background">@color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
    <item name="android:textColorPrimary">#000</item>
        <item name="colorAccent">@color/colorAccent2</item>
    <item name="android:background">@color/white</item></style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent2</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/bg_screen2</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">19dp</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/colorProgressBar</item>
    </style>


</resources>
