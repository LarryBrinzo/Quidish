<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionModeStyle">@style/MyActionMode</item>
        <item name="actionModeBackground">@color/white</item>
        <item name="android:actionButtonStyle">@style/myActionButtonStyle</item>
        <item name="actionButtonStyle">@style/myActionButtonStyle</item>
        <item name="actionModeCloseDrawable">@drawable/backa</item>
    </style>

    <style name="TextAppearance44">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="myActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minHeight">24dp</item>
        <item name="android:maxHeight">26dp</item>
        <item name="android:height">24dp</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="android:background">#fff</item>
        <item name="colorAccent">@color/colorAccent2</item>
        <item name="android:textColorPrimary">#000</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
    <item name="android:textColorPrimary">#000</item>
        <item name="colorAccent">@color/colorAccent2</item>
    <item name="android:background">@color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
    <item name="android:textColorPrimary">#000</item>
        <item name="colorAccent">@color/colorAccent2</item>
    <item name="android:background">@color/white</item></style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent2</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/bg_screen2</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">19dp</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/colorProgressBar</item>
    </style>


</resources>
