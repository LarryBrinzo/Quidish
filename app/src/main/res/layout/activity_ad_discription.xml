<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Home.Location.AddInstituteActivity">

    <LinearLayout
        android:id="@+id/backbt"
        android:clickable="true"
        android:layout_width="60dp"
        android:background="?attr/selectableItemBackground"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:focusable="true">

        <ImageView
            android:layout_width="27dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerInside"
            android:background="@null"
            app:srcCompat="@drawable/backb" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:isScrollContainer="true"
        android:descendantFocusability="afterDescendants"
        android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="true"
        android:descendantFocusability="afterDescendants"
        android:overScrollMode="never"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="3dp"
                android:text="Include some details"
                android:textColor="#000"
                android:textSize="23dp"
                android:textStyle="bold" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/TextLabel"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp">

                <EditText
                    android:id="@+id/brand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#ececf4"
                    android:hint="Brand"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="15dp"
                    />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/TextLabel"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="22dp">

                <EditText
                    android:id="@+id/adtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#ececf4"
                    android:hint="Listing Title*"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="15dp"
                    />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="13dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/titledes"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="#5f6077"
                    android:text="Mention the key features of your item (e.g. brand, model, age, type)"/>

                <TextView
                    android:id="@+id/titlect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#5f6077"
                    android:textSize="12dp"
                    android:visibility="gone"
                    android:text=""
                    android:layout_marginLeft="5dp"
                    />

            </LinearLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/TextLabel"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/description2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#ececf4"
                    android:hint="Describe what you are selling*"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="15dp"
                    />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="13dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/descriptiondes"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#5f6077"
                    android:maxLength="140"
                    android:textSize="12dp"
                    android:text="Include condition, features, reason for selling and any details a buyer might be interested in."/>

                <TextView
                    android:id="@+id/desct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#5f6077"
                    android:textSize="12dp"
                    android:visibility="gone"
                    android:text="12 / 23"
                    android:layout_marginLeft="5dp"
                    />

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/TextLabel"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#ececf4"
                    android:inputType="number"
                    android:hint="Price*"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="15dp"
                    />
            </android.support.design.widget.TextInputLayout>




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ITEM CONDITION"
                android:textSize="13dp"
                android:layout_marginTop="25dp"
                android:textColor="#a6a7af"
                android:textStyle="bold"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="15dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="13dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/newitm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/nicknameborder">

                    <TextView
                        android:id="@+id/newtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:textColor="#10a115"
                        android:text="NEW"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/useditm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/nicknameborder">

                    <TextView
                        android:id="@+id/usedtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:textColor="#10a115"
                        android:text="USED"/>

                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"
                />


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

        </LinearLayout>


        <Button
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/border8"
            android:enabled="false"
            android:text="@string/button_text2"
            android:textAllCaps="false"
            android:layout_marginBottom="15dp"
            android:textColor="#aeaeae"
            android:textColorLink="#FFFFFF"
            android:textStyle="bold"
            />


    </LinearLayout>

    </ScrollView>

</LinearLayout>