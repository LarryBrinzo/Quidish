<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp"
    android:background="#eef2f1"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="6dp"
        app:cardBackgroundColor="#cbe3f0"
        card_view:cardElevation="0.8dp"
        android:layout_gravity="center_horizontal"
        card_view:cardCornerRadius="6dp">

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginRight="8dp"
        android:background="#cbe3f0"
        android:textColor="#495356"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_horizontal"
        android:text=""/>

    </android.support.v7.widget.CardView>

    <Space
        android:id="@+id/s1"
        android:layout_width="match_parent"
        android:layout_height="2.5dp"
        android:visibility="visible"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/longpress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/layoutr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="80dp"
            android:layout_marginTop="2.2dp"
            android:layout_marginBottom="1dp"
            android:visibility="visible"
            android:layout_marginLeft="4dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/lblMsgFrom"
                android:layout_marginTop="-1dp"
                android:elevation="0.8dp"
                android:src="@drawable/arrow_bg2"
                android:tint="#fff" />

            <Space
                android:id="@+id/s2"
                android:layout_width="11dp"
                android:layout_height="match_parent"
                android:visibility="gone"/>

            <FrameLayout
                android:id="@+id/bg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:elevation="0.8dp"
                android:layout_marginBottom="2dp"
                android:layout_toRightOf="@+id/imageView"
                android:background="@drawable/their_message"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="6dp"
                    android:textColor="#000000"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/TimeFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/txtMsgFrom"
                    android:layout_alignRight="@+id/txtMsgFrom"
                    android:layout_below="@+id/txtMsgFrom"
                    android:layout_gravity="bottom|right"
                    android:padding="4dp"
                    android:textColor="#AFAFAF"
                    android:textSize="12dp" />

            </FrameLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layouts"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="2.2dp"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal"
            android:paddingLeft="80dp"
            android:visibility="gone"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:id="@+id/bg2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="13dp"
                android:layout_marginBottom="2dp"
                android:elevation="0.8dp"
                android:background="@drawable/my_message"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_marginRight="13dp">

                <TextView
                    android:id="@+id/messages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="3dp"
                    android:textColor="#000000"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_marginRight="19dp"
                    android:padding="5dp"
                    android:textColor="#a6ba94"
                    android:textSize="12dp" />

                <ImageView
                    android:id="@+id/status"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:padding="5dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="1dp"
                    android:src="@drawable/tick" />

            </FrameLayout>

            <ImageView
                android:id="@+id/img2"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:elevation="0.8dp"
                android:layout_marginTop="-1dp"
                android:layout_marginRight="3dp"
                android:src="@drawable/arrow_bg1"
                android:tint="#e2ffc4"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/myimg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="2.2dp"
            android:layout_marginBottom="1dp"
            android:paddingLeft="80dp"
            android:visibility="gone"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:id="@+id/bg3"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="13dp"
                android:layout_marginBottom="2dp"
                android:elevation="0.8dp"
                android:background="@drawable/my_message"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_marginRight="13dp">

                <ImageView
                    android:id="@+id/myimgview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/prodimage6"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/myimgtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:padding="5dp"
                    android:layout_marginRight="23dp"
                    android:text="02:30 AM"
                    android:textColor="#fff"
                    android:textSize="12dp"
                    />

                <ImageView
                    android:id="@+id/myimgstatus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:padding="5dp"
                    android:paddingLeft="3dp"
                    android:layout_marginRight="4dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="1dp"
                    android:src="@drawable/tick" />

            </FrameLayout>

            <ImageView
                android:id="@+id/img3"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:elevation="0.8dp"
                android:layout_marginTop="-1dp"
                android:layout_marginRight="3dp"
                android:src="@drawable/arrow_bg1"
                android:tint="#e2ffc4"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/theirimg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="80dp"
            android:layout_marginTop="2.2dp"
            android:layout_marginBottom="1dp"
            android:visibility="visible"
            android:layout_marginLeft="4dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img4"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_marginTop="-1dp"
                android:elevation="0.8dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/lblMsgFrom"
                android:src="@drawable/arrow_bg2"
                android:tint="#fff" />

            <Space
                android:id="@+id/s3"
                android:layout_width="11dp"
                android:layout_height="match_parent"
                android:visibility="gone"/>

            <FrameLayout
                android:id="@+id/bg4"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_alignParentTop="true"
                android:elevation="0.8dp"
                android:layout_marginBottom="2dp"
                android:layout_toRightOf="@+id/imageView"
                android:background="@drawable/their_message"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/theirimgview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/prodimage6"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/theirimgtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/txtMsgFrom"
                    android:layout_alignRight="@+id/txtMsgFrom"
                    android:layout_below="@+id/txtMsgFrom"
                    android:layout_gravity="bottom|right"
                    android:padding="4dp"
                    android:text="02:30"
                    android:layout_marginRight="4dp"
                    android:textColor="#fff"
                    android:textSize="12dp"
                    />

            </FrameLayout>

        </LinearLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bg_list_row"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent">

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>


</LinearLayout>
