<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent"
    tools:context=".PostYourAd.AdpostActivity">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f0f0f0"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/my_toolbar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="#2D3E4E"
                android:elevation="4dp"
                android:text=""
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                tools:layout_editor_absoluteX="109dp"
                tools:layout_editor_absoluteY="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/backbt"
                    android:clickable="true"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="40dp"
                        android:scaleType="centerInside"
                        android:layout_marginLeft="8dp"
                        android:background="@null"
                        app:srcCompat="@drawable/backw" />
                </LinearLayout>

                    <TextView
                        android:id="@+id/post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Post Free Ad"
                        android:textColor="#FFFFFF"
                        android:textSize="19dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </android.support.v7.widget.Toolbar>

        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.096">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:background="#f0f0f0"
                    android:orientation="vertical">


                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="15dp" />

                    <TextView
                        android:id="@+id/select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="    Ad Details"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="18dp" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/catagory_layout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#FFFFFF"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/cat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="     Category"
                        android:textColor="#BABABA"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/postcat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="17dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:background="#D3D3D3" />

                <LinearLayout
                    android:id="@+id/subcategory_layout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#FFFFFF"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/scat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="     Sub-Category"
                        android:textColor="#BABABA"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/postsubcat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="17dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:background="#D3D3D3" />

                <HorizontalScrollView
                    android:id="@+id/hsv"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="#FFFFFF"
                    android:fillViewport="true"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/image_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:clickable="true"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/cst1"
                            android:layout_width="115dp"
                            android:layout_marginLeft="5dp"
                            android:visibility="gone"
                            android:layout_height="105dp">

                            <ImageView
                                android:id="@+id/image1"
                                android:layout_width="110dp"
                                android:layout_height="100dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/prodimage6"
                                android:clickable="true"
                                android:scaleType="centerCrop"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/cancel1"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:background="@android:color/transparent"
                                android:clickable="true"
                                android:layout_marginLeft="8dp"
                                android:layout_marginStart="8dp"
                                android:tint="#808080"
                                android:src="@drawable/canc"
                                android:scaleType="centerInside"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="1.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.0" />

                            <TextView
                                android:layout_width="110dp"
                                android:layout_height="40dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginRight="5dp"
                                android:gravity="center"
                                android:text="Cover Photo"
                                android:textColor="#fff"
                                android:textStyle="bold"
                                android:textSize="14dp"
                                android:background="#BF23C5A0"
                                app:layout_constraintBottom_toBottomOf="@+id/image1"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />

                        </android.support.constraint.ConstraintLayout>

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/cst2"
                            android:layout_width="115dp"
                            android:layout_marginLeft="5dp"
                            android:visibility="gone"
                            android:layout_height="105dp">

                            <ImageView
                                android:id="@+id/image2"
                                android:layout_width="110dp"
                                android:layout_height="100dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/prodimage6"
                                android:clickable="true"
                                android:scaleType="centerCrop"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/cancel2"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:background="@android:color/transparent"
                                android:clickable="true"
                                android:layout_marginLeft="8dp"
                                android:layout_marginStart="8dp"
                                android:tint="#808080"
                                android:src="@drawable/canc"
                                android:scaleType="centerInside"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="1.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.0" />

                        </android.support.constraint.ConstraintLayout>

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/cst3"
                            android:layout_width="115dp"
                            android:layout_marginLeft="5dp"
                            android:visibility="gone"
                            android:layout_height="105dp">

                            <ImageView
                                android:id="@+id/image3"
                                android:layout_width="110dp"
                                android:layout_height="100dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/prodimage6"
                                android:clickable="true"
                                android:scaleType="centerCrop"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/cancel3"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:background="@android:color/transparent"
                                android:clickable="true"
                                android:layout_marginLeft="8dp"
                                android:layout_marginStart="8dp"
                                android:tint="#808080"
                                android:src="@drawable/canc"
                                android:scaleType="centerInside"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="1.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.0" />

                        </android.support.constraint.ConstraintLayout>

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/cst4"
                            android:layout_width="115dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:visibility="gone"
                            android:layout_height="105dp">

                            <ImageView
                                android:id="@+id/image4"
                                android:layout_width="110dp"
                                android:layout_height="100dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/prodimage6"
                                android:clickable="true"
                                android:scaleType="centerCrop"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/cancel4"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:background="@android:color/transparent"
                                android:clickable="true"
                                android:layout_marginLeft="8dp"
                                android:layout_marginStart="8dp"
                                android:tint="#808080"
                                android:src="@drawable/canc"
                                android:scaleType="centerInside"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="1.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.0" />

                        </android.support.constraint.ConstraintLayout>

                    </LinearLayout>

                </HorizontalScrollView>

                <LinearLayout
                    android:id="@+id/addpic_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:background="#FFFFFF"
                    android:clickable="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <ImageButton
                        android:id="@+id/addimage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        app:srcCompat="@drawable/addpic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Photos"
                        android:textColor="#000000"
                        android:textSize="12dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/after_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageButton
                        android:id="@+id/addimageafter"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="24dp"
                        android:background="#ffffff"
                        app:srcCompat="@drawable/addpic"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="24dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="#FFFFFF"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="5dp"
                            android:text="You can add up to 4 photos"
                            android:textColor="#000000"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="First photo of your selection will be cover photo"
                            android:textColor="#000000"
                            android:textSize="12dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/before_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:focusableInTouchMode="true"
                    android:focusable="true"
                    android:background="#FFFFFF"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="You can add up to 4 photos"
                        android:textColor="#000000"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="First photo of your selection will be cover photo"
                        android:textColor="#000000"
                        android:textSize="12dp" />

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:background="#D3D3D3" />

                <EditText
                    android:id="@+id/brand"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#CBCBCD"
                    android:ems="10"
                    android:hint="Brand Name / Product Type*"
                    android:inputType="textMultiLine"
                    android:textColor="#000000"
                    android:textColorHint="#BABABA"
                    android:textColorLink="#23C5A0"
                    android:textSize="15dp"
                    tools:layout_editor_absoluteX="21dp"
                    tools:layout_editor_absoluteY="48dp" />

                <EditText
                    android:id="@+id/model"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#CBCBCD"
                    android:ems="10"
                    android:hint="Model Name*"
                    android:inputType="textMultiLine"
                    android:textColor="#000000"
                    android:textColorHint="#BABABA"
                    android:textColorLink="#23C5A0"
                    android:textSize="15dp"
                    tools:layout_editor_absoluteX="21dp"
                    tools:layout_editor_absoluteY="48dp" />

                <EditText
                    android:id="@+id/adtitle"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#CBCBCD"
                    android:ems="10"
                    android:hint="Ad Title*"
                    android:inputType="textMultiLine"
                    android:textColor="#000000"
                    android:textColorHint="#BABABA"
                    android:textColorLink="#23C5A0"
                    android:textSize="15dp"
                    tools:layout_editor_absoluteX="21dp"
                    tools:layout_editor_absoluteY="48dp" />

                <EditText
                    android:id="@+id/addetails"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#CBCBCD"
                    android:ems="10"
                    android:hint="Enter Ad Details*"
                    android:inputType="textMultiLine"
                    android:textColor="#000000"
                    android:textColorHint="#BABABA"
                    android:textColorLink="#23C5A0"
                    android:textSize="15dp"
                    tools:layout_editor_absoluteX="21dp"
                    tools:layout_editor_absoluteY="48dp" />

                <EditText
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#CBCBCD"
                    android:ems="10"
                    android:hint="Price*"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:textColorHint="#BABABA"
                    android:textColorLink="#23C5A0"
                    android:textSize="15dp"
                    tools:layout_editor_absoluteX="21dp"
                    tools:layout_editor_absoluteY="48dp" />

                <EditText
                    android:id="@+id/includes"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#CBCBCD"
                    android:ems="10"
                    android:hint="Also Includes"
                    android:inputType="textMultiLine"
                    android:textColor="#000000"
                    android:textColorHint="#BABABA"
                    android:textColorLink="#23C5A0"
                    android:textSize="15dp"
                    tools:layout_editor_absoluteX="21dp"
                    tools:layout_editor_absoluteY="48dp" />

                <EditText
                    android:id="@+id/year"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#CBCBCD"
                    android:ems="10"
                    android:hint="Year of Purchase*"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:textColorHint="#BABABA"
                    android:textColorLink="#23C5A0"
                    android:textSize="15dp"
                    tools:layout_editor_absoluteX="21dp"
                    tools:layout_editor_absoluteY="48dp" />

                <EditText
                    android:id="@+id/condition"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#CBCBCD"
                    android:ems="10"
                    android:hint="Physical Condition*"
                    android:inputType="textMultiLine"
                    android:textColor="#000000"
                    android:textColorHint="#BABABA"
                    android:textColorLink="#23C5A0"
                    android:textSize="15dp"
                    tools:layout_editor_absoluteX="21dp"
                    tools:layout_editor_absoluteY="48dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="25dp"
                    android:background="#f0f0f0"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="     Your contact information"
                        android:textColor="#000000"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#CBCBCD"
                    android:ems="10"
                    android:hint="Name*"
                    android:inputType="textPersonName"
                    android:textColor="#000000"
                    android:textColorHint="#BABABA"
                    android:textColorLink="#23C5A0"
                    android:textSize="15dp"
                    tools:layout_editor_absoluteX="21dp"
                    tools:layout_editor_absoluteY="48dp" />

                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#CBCBCD"
                    android:ems="10"
                    android:hint="Address*"
                    android:inputType="textPersonName"
                    android:textColor="#000000"
                    android:textColorHint="#BABABA"
                    android:textColorLink="#23C5A0"
                    android:textSize="15dp"
                    tools:layout_editor_absoluteX="21dp"
                    tools:layout_editor_absoluteY="48dp" />

                <AutoCompleteTextView
                    android:id="@+id/autocompleteEditTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#CBCBCD"
                    android:layout_below="@+id/textView1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:hint="Name of Institute*"
                    android:ems="10"
                    android:completionHintView="@layout/hint_completion_layout"
                    android:popupBackground="#fff"
                    android:textColorHint="#BABABA"
                    android:textColorLink="#23C5A0"
                    android:textSize="15dp"
                    android:text=""
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#CBCBCD"
                    android:ems="10"
                    android:hint="Email Id*"
                    android:inputType="textEmailAddress"
