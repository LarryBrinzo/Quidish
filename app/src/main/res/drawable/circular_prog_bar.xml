<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="25dip" />
            <gradient android:startColor="#F4F7F5" android:centerColor="#F4F7F5"
                android:centerY="0.75" android:endColor="#F4F7F5" android:angle="90" />
            <stroke android:width="1dp" android:color="#F4F7F5" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="25dip" />
                <gradient android:startColor="@color/greenAccent" android:endColor="@color/greenAccent"
                    android:angle="90" />
                <stroke android:width="1dp" android:color="@color/greenAccent" />
            </shape>
        </clip>
    </item>
</layer-list>